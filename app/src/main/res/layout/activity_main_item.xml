<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/def_clear_space">

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="45dp"
        android:layout_height="68dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/def_spacing">

        <com.dicoding.willshuffy.willmovie.utils.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Batman V Superman : Down of Justice"
            android:textSize="@dimen/text_title"
            app:font_name="alanya.regular.ttf" />

        <com.dicoding.willshuffy.willmovie.utils.CustomTextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Begining the events of Justice League, the collective Super Hero"
            android:textSize="@dimen/text_subheading"
            app:font_name="roboto-condensed.light.ttf"/>

        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_spacing"
            android:text="Monday, Mar 19, 2018"
            android:textSize="@dimen/text_caption" />


    </LinearLayout>

</LinearLayout>